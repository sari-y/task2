
<h1>Editing Book</h1>

<div class="error"><% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %></div>


<%= form_with model: @book do |f| %>


  <h5>Title</h5>
  <div class="box1"><%= f.text_field :title %></div>

  <h5>Body</h5>
  <div class="box1"><%= f.text_area :body %></div>

  <div class="box1"><%= f.submit 'Update Book' %></div>

<% end %>

<div class="link1">
  <%= link_to "Show", book_path %> | <%= link_to "Back", books_path %>
</div>