
<div>
  <%= flash[:notice] %>
</div>


<h1>Books</h1>



<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>

  <% @books.each do |book| %>

    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
    </tr>

  <% end %>

</table>

<h2 class="new">New book</h2>

<div class="error"><% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %></div>

<%= form_with model: @book do |f| %>
  <h5>Title</h5>
  <div class="box1"><%= f.text_field :title %></div>

  <h5>Body</h5>
  <div class="box1"><%= f.text_area :body %></div>

  <div class="box1"><%= f.submit 'Create Book' %></div>
<% end %>








